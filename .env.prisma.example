# Prisma + PostgreSQL 环境配置

# PostgreSQL 数据库连接
DATABASE_URL="postgresql://username:password@localhost:5432/openpenpal?schema=public"

# 生产环境数据库（可选）
DATABASE_URL_PROD="postgresql://username:password@production-host:5432/openpenpal?schema=public"

# 应用配置
NODE_ENV=development
PORT=8080
HOST=0.0.0.0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# 前端 URL
FRONTEND_URL=http://localhost:3000

# 文件上传
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email 配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@openpenpal.com

# AI 配置（可选）
OPENAI_API_KEY=sk-...
CLAUDE_API_KEY=sk-ant-...

# Redis 配置（可选，用于缓存和会话）
REDIS_URL=redis://localhost:6379

# 日志级别
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100