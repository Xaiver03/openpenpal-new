{
  "app": {
    "name": "OpenPenPal",
    "env": "development",
    "url": "http://localhost:3000",
    "port": 3000,
    "debug": false
  },
  "database": {
    "url": "postgresql://postgres:password@localhost:5432/openpenpal",
    "pool": {
      "min": 2,
      "max": 10,
      "idleTimeoutMillis": 30000
    },
    "migrations": {
      "directory": "./migrations",
      "tableName": "migrations"
    }
  },
  "redis": {
    "url": "redis://localhost:6379",
    "password": "",
    "db": 0,
    "keyPrefix": "openpenpal:"
  },
  "auth": {
    "jwt": {
      "secret": "change-this-secret-in-production",
      "expiresIn": "7d",
      "refreshExpiresIn": "30d"
    },
    "bcrypt": {
      "rounds": 10
    }
  },
  "mail": {
    "host": "smtp.gmail.com",
    "port": 587,
    "secure": false,
    "auth": {
      "user": "",
      "pass": ""
    },
    "from": {
      "address": "noreply@openpenpal.com",
      "name": "OpenPenPal"
    }
  },
  "storage": {
    "type": "local",
    "local": {
      "uploadDir": "./uploads"
    }
  },
  "services": {
    "frontend": {
      "port": 3000
    },
    "apiGateway": {
      "port": 8000
    },
    "writeService": {
      "port": 8001
    },
    "courierService": {
      "port": 8002
    },
    "adminService": {
      "port": 8003
    },
    "ocrService": {
      "port": 8004
    }
  },
  "monitoring": {
    "sentry": {
      "dsn": "",
      "environment": "development"
    },
    "prometheus": {
      "enabled": true,
      "port": 9090
    }
  },
  "security": {
    "cors": {
      "origins": ["http://localhost:3000"],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 100
    }
  }
}