  "scripts": {
    "dev": "next dev",
    "smart-dev": "node scripts/smart-dev.js",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "analyze": "npm run build:analyze && open .next/analyze/client.html",
    "build:prod": "NODE_ENV=production next build && next export",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install",
    "launch": "node scripts/launcher.js",
    "quick-start": "node scripts/launcher.js",
    "command-launch": "node js-launcher.js",
    "mac-start": "node js-launcher.js",
    "check-port": "node scripts/check-port.js",
    "dev:debug": "DEBUG=true node scripts/launcher.js",
    "setup": "npm install && npm run check-port 3000",
    "clean": "rm -rf node_modules package-lock.json .next && npm install",
    "health-check": "node scripts/check-port.js 3000 && npm run type-check",
    "test-command": "node test-launch.js && echo '测试.command脚本:' && ls -la start-openpenpal.command",
    "fix-npm": "sudo chown -R $(whoami) ~/.npm && npm cache clean --force",
    "fix-and-start": "npm run fix-npm && npm install && npm run dev"
