# 服务器配置
PORT=8002
HOST=0.0.0.0
ENVIRONMENT=development

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openpenpal?sslmode=disable

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# WebSocket 配置
WEBSOCKET_URL=ws://localhost:8080/ws

# 服务发现配置
MAIN_BACKEND_URL=http://localhost:8080
WRITE_SERVICE_URL=http://localhost:8001
ADMIN_SERVICE_URL=http://localhost:8003
OCR_SERVICE_URL=http://localhost:8004

# 地理位置服务配置 (可选)
GEOCODING_API_KEY=your-geocoding-api-key
GEOCODING_PROVIDER=baidu  # baidu, amap, google

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 队列配置
QUEUE_WORKER_COUNT=4
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=60  # seconds

# 任务配置
AUTO_ASSIGNMENT_ENABLED=true
ASSIGNMENT_RADIUS_KM=10
MAX_COURIER_TASKS=5
TASK_TIMEOUT_HOURS=4

# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9002