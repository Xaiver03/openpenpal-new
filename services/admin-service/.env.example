# 🔒 安全配置 - 生产环境必须设置
# 请复制此文件为 .env 并设置真实值，不要提交到版本控制

# JWT 安全配置
JWT_SECRET=CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRATION=604800000

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=openpenpal
DB_USERNAME=admin_user
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 管理员配置
ADMIN_DEFAULT_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# 外部服务配置
WRITE_SERVICE_URL=http://localhost:8001
COURIER_SERVICE_URL=http://localhost:8002
GATEWAY_URL=http://localhost:8080

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

