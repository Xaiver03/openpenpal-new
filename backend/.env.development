# Development Environment Configuration
# 开发环境配置 - 使用 SQLite

# Server
PORT=8080
HOST=0.0.0.0
ENVIRONMENT=development

# Database - SQLite for development
DATABASE_TYPE=sqlite
DATABASE_URL=./openpenpal.db
DATABASE_NAME=openpenpal

# Security
JWT_SECRET=dev-secret-key-do-not-use-in-production
BCRYPT_COST=10

# Frontend
FRONTEND_URL=http://localhost:3000

# QR Code
QR_CODE_STORE_PATH=./uploads/qrcodes

# Email (Optional for development)
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@openpenpal.dev
EMAIL_FROM_NAME=OpenPenPal Dev