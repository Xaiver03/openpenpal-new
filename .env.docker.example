# Docker Compose Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_NAME=openpenpal
DB_USER=openpenpal
DB_PASSWORD=your-strong-database-password-change-this

# Security
JWT_SECRET=your-super-secret-jwt-key-at-least-64-characters-long-change-this

# Redis Configuration (if using Redis)
REDIS_PASSWORD=your-redis-password-change-this

# Service Ports (optional - defaults shown)
BACKEND_PORT=8080
FRONTEND_PORT=3000
GATEWAY_PORT=8000

# Environment
ENVIRONMENT=production

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@openpenpal.com

# External Services (optional)
OPENAI_API_KEY=
CLAUDE_API_KEY=
SENTRY_DSN=

# Monitoring (optional)
PROMETHEUS_PASSWORD=admin
GRAFANA_PASSWORD=admin